<Window x:Class="WPFApp.rezerwowanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="Formularz rezerwacji" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" Cursor="Arrow" FontFamily="Tw Cen MT Condensed Extra Bold"
        >
    <StackPanel>
    <StackPanel.Background>
        <ImageBrush ImageSource="/tlo.jpg" TileMode="None" Stretch="Fill"/>
    </StackPanel.Background>
        <TextBlock x:Name="danetxt" TextWrapping="Wrap" Text="Wypełnij dane" TextAlignment="Center" Foreground="White" Margin="0,30,0,0" FontSize="48" FontFamily="Tw Cen MT Condensed Extra Bold"/>
        <Button x:Name="back" Width="150" Height="30" Content="Powrót" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,0" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="18" Background="Black" Foreground="White" BorderBrush="#FFE6BD00" Click="glowna_click"/>










    </StackPanel>
</Window>
